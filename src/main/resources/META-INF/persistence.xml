<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="PI-PU" transaction-type="RESOURCE_LOCAL">
        <class>pl.edu.agh.eaiib.sensor.common.state.SensorState</class>
        <class>pl.edu.agh.eaiib.sensor.door.DoorSensorState</class>
        <class>pl.edu.agh.eaiib.sensor.movement.MovementSensorState</class>
        <class>pl.edu.agh.eaiib.sensor.common.value.SensorValue</class>
        <class>pl.edu.agh.eaiib.sensor.temperature.TemperatureBmp180SensorValue</class>
        <class>pl.edu.agh.eaiib.sensor.temperature.TemperatureMcp9808SensorValue</class>
        <class>pl.edu.agh.eaiib.sensor.pressure.PressureSensorValue</class>
        <class>pl.edu.agh.eaiib.sensor.attitude.AttitudeSensorValue</class>
        <class>pl.edu.agh.eaiib.sensor.light.LightIntensitySensorValue</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
    </persistence-unit>
</persistence>

